<odoo>
    <data>
        <!--FORMULARIO CATEGORIA -->
        <record id="library_category_form_view" model="ir.ui.view">
            <field name="name">Library Categoria Form</field>
            <field name="model">library.category</field>
            <field name="arch" type="xml">
                <form string="Categoria Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="book_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--VISTA TREE -->
        <record id="library_category_tree_view" model="ir.ui.view">
            <field name="name">Library Categoria Tree</field>
            <field name="model">library.category</field>
            <field name="arch" type="xml">
                <tree string="Categoria tree">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

         <!-- ACTION VIEW -->
         <record id="action_library_category" model="ir.actions.act_window">
             <field name="name">Categoria</field>
             <field name="type">ir.actions.act_window</field>
             <field name="res_model">library.category</field>
             <field name="view_mode">tree,form,graph</field>
             <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">
               Crear nuevas categorias
               </p>
             </field>
         </record>

        <!-- CREAR MENUS -->
        <menuitem id="library_category_menu"
                  parent ="library_category_level"
                  name="Categoria"
                  action="action_library_category"
                  sequence="1"/>
    </data>
</odoo>